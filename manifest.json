{
  "manifest_version": 3,
  "name": "Discord Token Manager",
  "version": "1.1",
  "description": "Discord token yönetimi için güçlü araç",
  "permissions": [
    "scripting",
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://discord.com/*",
    "https://*.discord.com/*",
    "https://*.example.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.discord.com/*"],
      "js": ["inject-token.js"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src https://discord.com;"
  }
}
